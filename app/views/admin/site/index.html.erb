<div class="modal-content">

	<div id="modal-browser-header">
		<h1>Site configuration</h1>
	</div>

	<div id="modal-browser-body">
		<%= render partial: 'git', layout: 'modal_card', locals: { title: 'Git', subtitle: nil }%>

		<%= render partial: 'email', layout: 'modal_card', locals: { title: 'E-mail', subtitle: nil } %>

		<%= render partial: 'settings', layout: 'modal_card', locals: { title: 'Settings', subtitle: nil }%>

		<% if Dropbox::Client.available? %>
		<%= render partial: 'dropbox', layout: 'modal_card', locals: { title: 'Dropbox', subtitle: nil }%>
		<% end %>

		<%= render partial: 'webhook', layout: 'modal_card', locals: { title: 'Webhook', subtitle: nil }%>

		<%= render partial: 'permissions', layout: 'modal_card', locals: { title: 'Permissions', subtitle: nil }%>
	</div>

</div>
